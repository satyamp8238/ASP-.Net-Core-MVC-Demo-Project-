@model DemoProject.Models.Product

@{
    string lsTile = string.Empty;

    if (Model.inId != null && Model.inId != 0)
        lsTile = "Edit Product";
    else
        lsTile = "Add Product";

    ViewData["Title"] = lsTile;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SaveProduct" method="post">
    <input type="hidden" asp-for="inId" value="@Model.inId" />

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    <label for="Name">Product Name</label>
                    <input type="text" class="form-control" asp-for="stName" required />
                </div>

                <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="number" class="form-control" asp-for="inPrice" required />
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-2 align-content-end">Submit</button>
                <a href="@Url.Action("Index","Home")" class="btn btn-danger btn-block mt-2 align-content-end">Cancle</a>
            </div>
        </div>
    </div>
</form>
